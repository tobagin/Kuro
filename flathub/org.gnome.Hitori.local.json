{
    "app-id": "org.gnome.Hitori",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "hitori",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=fallback-x11",
        /* Wayland access */
        "--socket=wayland",
        /* Device access */
        "--device=dri",
        "--metadata=X-DConf=migrate-path=/org/gnome/hitori/"
    ],
    "modules": [
        {
            "name": "hitori",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}